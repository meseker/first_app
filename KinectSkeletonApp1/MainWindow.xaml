<Window x:Class="KinectSkeletonApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Image Name="videoImage"></Image>
        <Canvas Background="Transparent">
            <Ellipse Fill="Red" Height="20" Width="20" Name="leftHand" Stroke="White" />
            <Ellipse Fill="Red" Height="20" Width="20" Name="rightHand" Stroke="Red" />
            <Ellipse Fill="Red" Height="20" Width="20" Name="head" Stroke="Blue" />
        </Canvas>
    </Grid>
</Window>
